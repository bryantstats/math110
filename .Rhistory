library(ggplot2)
library(dplyr)
# Data Setup
Grades = c("A","A-","B+","B","B-","C+","C","C-","D+","D", "F")
Total_Percentage = c(92.45, 89.45, 86.45, 82.45 ,79.45, 76.45, 72.45, 69.45, 66.45, 59.45, 5) # Added value to F for visibility
df = data.frame(Grades = Grades, Total_Percentage = Total_Percentage)
# Calculate label positions (middle of the slice)
df <- df %>%
arrange(desc(Grades)) %>%
mutate(pos = cumsum(Total_Percentage) - (Total_Percentage / 2))
# Pie Chart Code
p <- ggplot(df, aes(x = "", y = Total_Percentage, fill = Grades)) +
geom_col(width = 1, color = "white") +
# Convert bar to pie
coord_polar("y", start = 0) +
# Add labels within the chart
geom_text(aes(y = pos, label = Total_Percentage), color = "white", size = 4) +
theme_void() + # Clean background
labs(title = "Grade Distribution")
