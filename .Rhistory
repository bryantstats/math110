library(ggplot2)
library(dplyr)
library(scales)
# 1. Data Preparation
df <- data.frame(
Grades = c('Attendance', 'Assignments', 'Midterm - Exams', 'Final Exam'),
Percentage = c(0.05, 0.10, 0.50, 0.35)
)
# 2. Calculate positions for labels and lines
df <- df %>%
arrange(desc(Grades)) %>%
mutate(
prop = Percentage / sum(Percentage),
ypos = cumsum(prop) - 0.5 * prop,
label = paste0(toupper(Grades), "\n", percent(Percentage))
)
# 3. The "Pretty" Plot
ggplot(df, aes(x = 2, y = Percentage, fill = Grades)) +
# Use a slight transparency (alpha) and white borders for a modern look
geom_col(width = 0.9, color = "white", linewidth = 1, alpha = 0.8) +
coord_polar(theta = "y") +
# Labels outside the chart
geom_text(aes(x = 3.6, y = ypos, label = label),
size = 4,
color = "#2c3e50",
fontface = "bold",
lineheight = 0.9) +
# Clean thin connector lines
geom_segment(aes(x = 2.5, xend = 3.2, y = ypos, yend = ypos),
color = "grey70",
linewidth = 0.5) +
# Modern, sophisticated color palette
scale_fill_manual(values = c(
"Attendance" = "#95a5a6",      # Soft Grey
"Assignments" = "#3498db",     # Bright Blue
"Midterm - Exams" = "#e74c3c", # Soft Red
"Final Exam" = "#2ecc71"       # Fresh Green
)) +
# Donut hole and spacing
xlim(0.5, 4.5) +
theme_void() +
theme(
legend.position = "none",
plot.title = element_text(hjust = 0.5, vjust = -2, size = 18,
face = "bold", color = "#2c3e50", margin = margin(b = 20)),
plot.margin = margin(20, 20, 20, 20)
) +
labs(title = "WEIGHTED GRADING SCHEME")
