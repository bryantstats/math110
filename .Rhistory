coord_polar(theta = "y", start = 0) +
# Add labels directly into the slices
geom_text(aes(label = label),
position = position_stack(vjust = 0.5),
color = "white",
size = 4.5,
fontface = "bold") +
# xlim(0.5, 2.5) creates the "Donut" hole which makes it look modern
xlim(0.5, 2.5) +
# Use a professional, distinct color palette
scale_fill_manual(values = c(
"Attendance" = "#2c3e50",      # Dark Blue-Grey
"Assignments" = "#2980b9",     # Ocean Blue
"Midterm - Exams" = "#e67e22", # Professional Orange
"Final Exam" = "#27ae60"       # Emerald Green
)) +
# Remove all axes, grids, and the redundant legend
theme_void() +
theme(legend.position = "none") +
labs(title = "Course Grade Breakdown")
