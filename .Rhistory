library(dplyr)
library(ggrepel)
library(scales)
# 1. Prepare the data
df <- data.frame(
Grades = c('Attendance', 'Assignments', 'Midterm - Exams', 'Final Exam'),
Percentage = c(0.05, 0.10, 0.50, 0.35)
)
# 2. Calculate label positions for the lines
df <- df %>%
mutate(
end_angle = cumsum(Percentage) * 2 * pi,
start_angle = lag(end_angle, default = 0),
mid_angle = 0.5 * (start_angle + end_angle),
# Coordinates for the text
y = Percentage,
label = paste0(Grades, " (", percent(Percentage), ")")
)
# 3. Create the Plot
ggplot(df, aes(x = 1, y = Percentage, fill = Grades)) +
geom_col(color = "white", show.legend = FALSE) +
coord_polar(theta = "y") +
# This adds the labels outside with lines/arrows
geom_text_repel(
aes(label = label),
position = position_stack(vjust = 0.5),
point.padding = 0.5,     # Distance from the slice
nudge_x = 0.8,           # Moves labels further outside the circle
segment.color = "grey30",# Color of the arrow/line
direction = "y",         # Align labels vertically for readability
size = 4.5,
fontface = "bold"
) +
