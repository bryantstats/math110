library(ggplot2)
library(dplyr)
library(scales)
# 1. Prepare data
df <- data.frame(
Grades = c('Attendance', 'Assignments', 'Midterm - Exams', 'Final Exam'),
Percentage = c(0.05, 0.10, 0.50, 0.35)
)
# 2. Manually calculate the center point of each slice for the labels
df <- df %>%
arrange(desc(Grades)) %>%
mutate(
prop = Percentage / sum(Percentage),
ypos = cumsum(prop) - 0.5 * prop,
label = paste0(Grades, "\n(", percent(Percentage), ")")
)
# 3. Create the plot
ggplot(df, aes(x = 2, y = Percentage, fill = Grades)) +
geom_col(width = 1, color = "white", show.legend = FALSE) +
coord_polar(theta = "y") +
# Add the labels outside the pie
# We use x = 3.2 to push the text well outside the circle (x=2)
geom_text(aes(x = 3.2, y = ypos, label = label),
size = 4.5,
fontface = "bold",
lineheight = 0.9) +
# Add the "Lines" pointing to the slices
geom_segment(aes(x = 2.5, xend = 2.9, y = ypos, yend = ypos),
color = "grey50") +
scale_fill_brewer(palette = "Paired") +
theme_void() +
# Expand x-axis limits to make room for the labels outside
xlim(0.5, 4) +
labs(title = "Course Grade Breakdown") +
theme(plot.title = element_text(hjust = 0.5, size = 16, face = "bold"))
